{
	background-color: rgba(0,0,0,0%);
	border: 4px solid rgb(100,100,100);
	/* color: rgb(200,200,200); */
}


SubchannelPreview#subchannelPreview
{
	background-color: rgb(60,60,65);
}


PageMidi#pageMidi,
PageSubchannel#pageSubchannel,
PageSettings#pageSettings,
PageInfos#pageInfos
{
	background-color: rgb(80,80,90);
}


QCheckBox#settings_checkbox
{
	font: 18px;
}
QCheckBox#settings_checkbox::indicator
{
	width:  40px;
	height: 40px;
	border: 2px solid black;
}
QCheckBox#settings_checkbox::indicator:unchecked
{
	background-color: rgb(70,70,80);
}
QCheckBox#settings_checkbox::indicator:checked
{
	background-color: rgb(255,140,0);
}




QTreeView#treeView::item:selected { background-color:rgb(255,140,0); }

QLabel#stepcounter,
QLabel#bpmLabel,
QLabel#headLabel
{
	color: rgb(200,200,200);
}



