QPushButton
{
	outline: none;
	border-width: 5 px;
	border-radius: 0px;
	background-color: rgb(100,100,100);
	color: rgb(200,200,200);
}


QPushButton:pressed
{
	border-style: none;
	border-width: 5 px;
	background-color: rgb(255,140,0);
	color: rgb(200,200,200);
}




QPushButton#pathButton
{
	outline: none;
	border-width: 5 px;
	border-radius: 0px;
	background-color: rgb(100,100,100);
	color: rgb(200,200,200);
	text-align: center;
	font: bold 14px;
}

QPushButton#pathButton:pressed
{
	background-color: rgb(255,140,0);
}


